@page
@model FC_MVVC.Areas.User.Pages.Profile.ProfileModel
@inject FC_MVVC.Services.ApplicationUserService userService
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">

        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>@Model.WelcomeMessage</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="UpdateProfile" method="post">
                                <div class="form-group row">
                                    <label asp-for="Input.FirstName" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="Input.FirstName" class="form-control">
                                        <span asp-validation-for="Input.FirstName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Input.LastName" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="Input.LastName" class="form-control">
                                        <span asp-validation-for="Input.LastName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Input.MeasureType" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <select asp-for="Input.MeasureType" class="form-control" novalidation>
                                            <option selected>kg</option>
                                            <option>lbs</option>
                                        </select>
                                        <span asp-validation-for="Input.MeasureType"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Input.PhoneNumber" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="Input.PhoneNumber" class="form-control">
                                        <span asp-validation-for="Input.PhoneNumber"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Input.PublicInfo" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <textarea asp-for="Input.PublicInfo" class="form-control" cols="40" rows="4"></textarea>
                                        <span asp-validation-for="Input.PublicInfo"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <button type="submit" class="btn btn-primary">Update My Profile</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <a asp-area="Identity" asp-page="/Account/ForgotPassword">Change Password?</a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>